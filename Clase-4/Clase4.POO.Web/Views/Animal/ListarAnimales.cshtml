@using Clase4.POO.Entidades

@model List<AbstractAnimal>

@{
    ViewData["Title"] = "Listado de animales";
}

<h1>@ViewData["Title"]</h1>

<a href="/Animal/NuevoAnimal" class="btn btn-primary">Agregar Animal</a>

<div class="row">
    @foreach (var animal in Model)
    {
        @Html.Partial("_pvAnimal", animal)
    }
</div>